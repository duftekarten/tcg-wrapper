{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "es2018",
    "lib": ["es2019"],
    "noImplicitAny": false,
    "declaration": false,
    "allowJs": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "disableReferencedProjectLoad": true,
    "paths": {
      "root-common/*": ["../common/*"],
      "root-config/*": ["../config/*"],
      "root/*": ["../*"]
    }
  },
  "include": ["./src/index.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.*",
    "./dist/**/*",
    "../common/**/*test.*"
  ]
}
